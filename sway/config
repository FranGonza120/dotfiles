# Carga el tema de teclado y configuración básica
include ~/.config/sway/wallpaper.conf
##  include ~/.config/sway/theme.conf
input * xkb_layout latam

#Configuro tecla mod
set $mod Mod4

# Fuente 
font pango:JetBrainsMonoNLNerdFontMono-Regular 12
seat * xcursor_theme capitaine-cursors 24


# Ventanas sin bordes con padding de 2 puntos
#default_border none
default_border pixel 2
gaps inner 3
gaps outer 3

# Workspaces (6 disponibles)
set $ws1 "1  "
set $ws2 "2 󰷉"
set $ws3 "3 "
set $ws4 "4 󰂺"
set $ws5 "5 "
set $ws6 "6 "
set $ws7 "7 "

# Asignar aplicaciones a workspaces
assign [app_id="org.wezfurlong.wezterm"] $ws1
assign [app_id="thunar"] $ws1
assign [class="obsidian"] $ws2
assign [app_id="okular"] $ws4
assign [app_id="org.mozilla.firefox"] $ws3
assign [app_id="zen"] $ws3
assign [class="Spotify"] $ws5

# Configuración de Ventana
for_window [app_id="org.mozilla.firefox"] fullscreen enable, focus

# mover Ventanas en el Workspace
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# mover Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Dividir
bindsym $mod+b splith
bindsym $mod+v splitv

# Modo Ajustar Tamaño
mode "resize" {
   bindsym h resize shrink width 10px
   bindsym j resize grow height 10px
   bindsym k resize shrink height 10px
   bindsym l resize grow width 10px

   # Return to default mode
   bindsym Return mode "default"
   bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Cambiar de workspace con Mod+Número
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7

# Mover ventanas entre workspaces
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7

# Movimiento entre monitores
# Mover la ventana actual al monitor de la izquierda o derecha
bindsym $mod+Shift+Left  move container to output left
bindsym $mod+Shift+Right move container to output right
# Cambiar el foco de la ventana entre monitores
bindsym $mod+Left  focus output left
bindsym $mod+Right focus output right
# Mover el cursor al monitor izquierdo o derecho
bindsym $mod+Ctrl+Left  exec swaymsg seat seat0 cursor move -1920 0
bindsym $mod+Ctrl+Right exec swaymsg seat seat0 cursor move 1920 0
bindsym $mod+Shift+n move workspace to output HDMI-A-1
bindsym $mod+n move workspace to output eDP-1



# Hotkeys básicos
bindsym $mod+Return exec wezterm
bindsym $mod+d exec rofi -show drun -theme ~/.config/rofi/config.rasi
bindsym $mod+o exec ~/Escritorio/3.Recursos/Scripts/rofi/open_file.sh
bindsym $mod+Shift+b exec ~/Escritorio/3.Recursos/Scripts/rofi/select_wallpaper.sh
bindsym $mod+q kill
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exit
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f floating toggle
bindsym $mod+s exec grim -g "$(slurp)" - | wl-copy
bindsym $mod+p exec ~/.config/swaylock/lock.sh

# Brillo
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

# Ajuste de volumen
bindsym XF86AudioRaiseVolume exec ~/.config/sway/volume.sh up
bindsym XF86AudioLowerVolume exec ~/.config/sway/volume.sh down
bindsym XF86AudioMute exec ~/.config/sway/volume.sh mute


# Configuración de salida (DE-like behavior)
exec_always --no-startup-id swayidle -w \
    timeout 300 '~/.config/swaylock/lock.sh'" \
    timeout 600 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"'

exec_always ~/.config/sway/monitor_hotplug.sh
exec_always pgrep -x waybar || waybar 
exec_always pgrep nm-applet || nm-applet
exec_always mako
exec_always pgrep blueman-applet || blueman-applet
exec_always syncthing serve --no-browser
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec /usr/libexec/xdg-desktop-portal -r
